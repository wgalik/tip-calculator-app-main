{
  "name": "tip-calculator-app-main",
  "version": "1.0.0",
  "description": "![Design preview for the Tip calculator app coding challenge](./preview.jpg)",
  "main": "dist/js/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:ts": "tsc",
    "watch:ts": "tsc --watch",
    "build:scss": "sass src/scss:dist/css",
    "watch:scss": "sass --watch src/scss:dist/css",
    "postcss": "postcss dist/css/*.css --dir dist/css",
    "watch:postcss": "postcss --watch dist/css/*.css --dir dist/css",
    "build": "npm run build:ts && npm run build:scss && npm run postcss",
    "watch": "concurrently \"npm run watch:ts\" \"npm run watch:scss\" \"npm run watch:postcss\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.10.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "sass": "^1.94.0",
    "typescript": "^5.9.3"
  }
}
